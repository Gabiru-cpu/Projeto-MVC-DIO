@model ProjetoMVC.Models.Contato

@{
    ViewData["Title"] = "Criar novo contato";
}

<h1>Criar novo contato</h1>

<hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar" method="post">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" type="text" class="form-control" placeholder="Pedro, AndrÃ©, etc..."/>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" type="text" class="form-control" placeholder="(13) 99999-9999"/>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input asp-for="Ativo" type="checkbox" class="form-check-input" />
            </div>
            <br>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

